<VBox prefHeight="500.0" prefWidth="803.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.CustomerAccountScreen">
  <children>
    <MenuBar prefHeight="0.0" prefWidth="545.0" VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem mnemonicParsing="false" text="New" />
            <MenuItem mnemonicParsing="false" text="Open…" />
            <Menu mnemonicParsing="false" text="Open Recent" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Close" />
            <MenuItem mnemonicParsing="false" text="Save" />
            <MenuItem mnemonicParsing="false" text="Save As…" />
            <MenuItem mnemonicParsing="false" text="Revert" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Preferences…" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Quit" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Edit">
          <items>
            <MenuItem mnemonicParsing="false" text="Undo" />
            <MenuItem mnemonicParsing="false" text="Redo" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Cut" />
            <MenuItem mnemonicParsing="false" text="Copy" />
            <MenuItem mnemonicParsing="false" text="Paste" />
            <MenuItem mnemonicParsing="false" text="Delete" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Select All" />
            <MenuItem mnemonicParsing="false" text="Unselect All" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
          <items>
            <MenuItem mnemonicParsing="false" text="About MyHelloApp" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="475.0" prefWidth="811.0" style="-fx-background-color: White;" VBox.vgrow="ALWAYS">
      <children>
            <Button fx:id="logoutButton" layoutX="737.0" layoutY="4.0" mnemonicParsing="false" prefHeight="21.0" prefWidth="59.0" style="-fx-background-color: #DDF8FF; -fx-border-color: Black;" text="Logout">
               <font>
                  <Font name="System Bold" size="9.0" />
               </font></Button>
            <ImageView fx:id="homeButton" fitHeight="55.0" fitWidth="213.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/BapersLogo.jpg" />
               </image>
            </ImageView>
            <ImageView fitHeight="32.0" fitWidth="241.0" layoutX="6.0" layoutY="76.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/Customer-Accounts-icon.jpg" />
               </image>
            </ImageView>
            <Label layoutX="566.0" layoutY="4.0" prefHeight="21.0" prefWidth="167.0" style="-fx-border-color: Black;" text="Welcome [logged in user]" textAlignment="RIGHT">
               <font>
                  <Font size="9.0" />
               </font>
            </Label>
            <TextField layoutX="653.0" layoutY="79.0" prefHeight="25.0" prefWidth="143.0" promptText="Search" style="-fx-border-style: solid; -fx-border-radius: 10;">
               <font>
                  <Font size="10.0" />
               </font>
            </TextField>
            <TableView fx:id="customerAccountTable" editable="true" layoutX="6.0" layoutY="119.0" prefHeight="312.0" prefWidth="657.0" style="-fx-border-style: solid;">
              <columns>
                <TableColumn fx:id="accountNumberColumn" prefWidth="78.0" text="Account No" />
                <TableColumn fx:id="userNameColumn" minWidth="1.0" prefWidth="74.0" text="Username" />
                  <TableColumn fx:id="accountStatusColumn" minWidth="0.0" prefWidth="103.0" text="Account Status" />
                  <TableColumn fx:id="addressColumn" prefWidth="118.0" text="Address" />
                  <TableColumn fx:id="phoneColumn" prefWidth="98.0" text="Phone Number" />
                  <TableColumn fx:id="agreedDiscountColumn" prefWidth="100.0" text="Agreed Discount" />
                  <TableColumn fx:id="discountPercentColumn" prefWidth="84.0" text="Discount (%)" />
              </columns>
               <cursor>
                  <Cursor fx:constant="DEFAULT" />
               </cursor>
            </TableView>
            <Button fx:id="processTasksButton" layoutX="667.0" layoutY="162.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="87.0" style="-fx-background-color: #DDF8FF; -fx-border-style: solid;" text="Process Tasks">
               <font>
                  <Font size="9.0" />
               </font>
            </Button>
            <Button fx:id="deleteCustomerButton" layoutX="710.0" layoutY="203.0" mnemonicParsing="false" prefHeight="32.0" prefWidth="42.0" style="-fx-background-color: White;">
               <graphic>
                  <ImageView fitHeight="55.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/DeleteIcon.jpg" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="registerNewCustomerButton" layoutX="540.0" layoutY="79.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="110.0" style="-fx-background-color: #DDF8FF; -fx-border-style: Solid;" text="Register New Customer">
               <font>
                  <Font size="9.0" />
               </font>
            </Button>
            <Button layoutX="754.0" layoutY="310.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="35.0" style="-fx-background-color: White;" />
            <Button layoutX="754.0" layoutY="359.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="35.0" style="-fx-background-color: White;" />
            <Button fx:id="editCustomerButton" layoutX="662.0" layoutY="200.0" mnemonicParsing="false" prefHeight="43.0" prefWidth="50.0" style="-fx-background-color: -white;">
               <graphic>
                  <ImageView fitHeight="55.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/Edit-Icon.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
      </children>
    </AnchorPane>
  </children>
</VBox>
